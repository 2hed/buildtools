<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <IntermediateAssemblyPath>$(IntermediateOutputPath)$(TargetName)$(TargetExt)</IntermediateAssemblyPath>
    <PostProcessAssemblyMarker>$(IntermediateAssemblyPath).postprocessed</PostProcessAssemblyMarker>
  </PropertyGroup>

  <Target Name="PostProcessAssembly"
    AfterTargets="CoreCompile"
    Inputs="$(IntermediateAssemblyPath)"
    Outputs="$(PostProcessAssemblyMarker)">

    <CallTarget Targets="@(PostProcessAssemblySteps)" />
    <Touch Files="$(PostProcessAssemblyMarker)" AlwaysCreate="true" />

    <ItemGroup>
      <FileWrites Include="$(PostProcessAssemblyMarker)" />
    </ItemGroup>
  </Target>

</Project>
